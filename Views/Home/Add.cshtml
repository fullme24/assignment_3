@{
    ViewBag.title = "The Joel Hilton Film Collection";
}

@model assignment_3.Models.Add

<div class="form">
    <form asp-action="Add" method="post">
        <label for="category">
            Category
        </label>
        <select id="category" asp-for="Category">
            <option value="Action/Adventure">
                Action/Adventure
            </option>

            <option value="Comedy">
                Comedy
            </option>

            <option value="Drama">
                Drama
            </option>

            <option value="Family">
                Family
            </option>

            <option value="Horror/Suspense">
                Horror/Suspense
            </option>

            <option value="Miscellaneous">
                Miscellaneous
            </option>

            <option value="Television">
                Television
            </option>

            <option value="VHS">
                VHS
            </option>
        </select>
        <br />

        <label for="title">
            Title
        </label>
        <input id="title" asp-for="Title" />
        <br />

        <label for="year">
            Year
        </label>
        <input id="year" asp-for="Year" />
        <br />

        <label for="director">
            Director
        </label>
        <input id="director" asp-for="Director" />
        <br />

        <label for="rating">
            Please Select a Rating
        </label>
        <select id="rating" asp-for="Rating">
            <option value="G">
                G
            </option>

            <option value="PG">
                PG
            </option>

            <option value="PG-13">
                PG-13
            </option>

            <option value="R">
                R
            </option>
        </select>
        <br />

        <label for="edited">
            Edited
        </label>
        <input type="checkbox" id="edited" asp-for="Edited" />
        <br />

        <label for="lent_to">
            Lent to
        </label>
        <input id="lent_to" asp-for="Lent_to" />
        <br />

        <label for="notes">
            Notes
        </label>
        <input id="notes" asp-for="Notes" />
        <br />

        <button type="submit">
            Add movie!
        </button>
    </form>
</div>
